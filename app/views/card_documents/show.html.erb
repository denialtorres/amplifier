<style>
  #amplifier-title-saved {
    display: none;
    opacity: 0;
  }

  #amplifier-title-saved.show {
    display: block;
    opacity: 1;
    transition: opacity 0.3s ease-in-out; /* Add a transition for the opacity property */
  }
</style>

<body>
  <div class="py-5" >
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>
            <%= @card_document.name %>
          </h1>
          <p>
            <strong>Document Unique ID:</strong>
            <%= @card_document.document_unique_id %>
          </p>
          <%= render partial: "amplifier_conversations/messages", locals: { conversation: @card_document, messages: @card_document.messages  } %>
        </div>
        <div class="col-md-6" data-controller="messages">
          <h1 class="">Conversation</h1>
          <%= render partial: "card_documents/form_conversation", locals: { card_document: @card_document, conversation: @conversation } %>
        </div>
      </div>

      <%= link_to 'Back', card_documents_path %>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
